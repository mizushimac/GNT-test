= form_for @vehicle_form, url: @vehicle_form.persisted? ? vehicle_path(@vehicle_form.id) : vehicles_path do |f|
  - if @vehicle_form.errors.any?
    #error_explanation
      %h2= "#{pluralize(@vehicle_form.errors.count, "error")} prohibited this coupon from being saved:"
      %ul
        - @vehicle_form.errors.full_messages.each do |message|
          %li= message

  %section{ class: 'column_2 cf' }
    .g-box.cf
      .g-box_inner.cf
        .field.form-group
          = f.label :manufacture
          = f.text_field :manufacture, class: 'form-control required', required: true

        .field.form-group
          = f.label :model
          = f.text_field :model, class: 'form-control required'

        .field.form-group
          = f.label :year
          = f.select(:year, (Time.zone.now.year).downto(1900).collect{ |year| [year, year] }, {}, { class: 'form-control' })

        .field.form-group
          = f.label :price
          = f.text_field :price, class: 'form-control'