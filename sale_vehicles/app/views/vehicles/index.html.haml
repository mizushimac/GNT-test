%header( class="row f-align-items-center mt1 cf" )
  .col-3.col-md-3
    %h1(class="main_title") VEHICLES
  .col-9
    .text-right
      = link_to 'New Vehicle', new_vehicle_path, { class: 'btn btn-raised btn-info' }

%section.bg_white.mt1.pd1_6
  %table.table.table-striped.text-left
    %thead
      %tr
        %th Id
        %th Manufacture
        %th Model
        %th Year
        %th Price
        %th{colspan: 3} Action
    %tbody
      - @vehicles.each do |vehicle|
        %tr
          %td 
            = vehicle.id
          %td 
            = vehicle.manufacture
          %td 
            = vehicle.model
          %td 
            = vehicle.year
          %td 
            = vehicle.price
          %td
            %ul(class="ml-auto")
              %li( class="dropdown" )
                %a(class="" id="alertsDropdown" href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")>
                  %i(class="material-icons") more_horiz
                .dropdown-menu.dropdown-menu-right(aria-labelledby="alertsDropdown")
                  = link_to vehicle, {class: 'dropdown-item small'} do
                    %i(class="material-icons") pageview
                    &nbsp;Show
                  = link_to edit_vehicle_path(vehicle), { class: 'dropdown-item small' } do
                    %i(class="material-icons") edit
                    &nbsp;Edit
                  = link_to vehicle, { method: :delete, class: "dropdown-item small", data: { confirm: 'Are you sure?' } } do
                    %i(class="material-icons")delete
                    &nbsp;Destroy

-# pagination
= paginate @vehicles