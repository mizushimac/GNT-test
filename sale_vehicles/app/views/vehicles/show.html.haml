%header( class="row f-align-items-center mt1 cf" )
  .col-3.col-md-3
    %h1(class="main_title") Vehicle #{@vehicle.manufacture}
%br/

%table.table.table-striped.table-bordered
  %tbody
    %tr
      %th.width-20.text-right(scope="row")
        id
      %td.text-left
        = @vehicle.id

    %tr
      %th.width-20.text-right(scope="row")
        Manufacture
      %td.text-left
        = @vehicle.manufacture
    
    %tr
      %th.width-20.text-right(scope="row")
        Model
      %td.text-left
        = @vehicle.model
    
    %tr
      %th.width-20.text-right(scope="row")
        Year
      %td.text-left
        = @vehicle.year
    
    %tr
      %th.width-20.text-right(scope="row")
        Price
      %td.text-left
        = number_to_currency(@vehicle.price, precision: 2)

= link_to 'Edit', edit_vehicle_path(@vehicle), class: 'btn btn-raised btn-info'
= link_to 'Destroy', vehicle_path(@vehicle), { method: :delete, class: 'btn btn-raised btn-danger', data: {confirm: 'Are you sure?'} }
= link_to 'Back', vehicles_path, class: 'btn btn-raised btn-primary'
